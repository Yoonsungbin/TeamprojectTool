		<!-- task -->
		<div class="post_it">
			<!--<img src="img/postit.png" alt="post_it" width="350" height="350"/>-->
			<div id="add">
				<a data-toggle="modal" href="#myModal" data-role="add"><img src="../images/btn_plus.png" width="100" height="100"/></a>
			</div>
		</div>
		<!--
		<div id="post_it_show">
			<img src="img/postit.png" alt="post_it" width="350" height="350"/>
		</div>
		-->
		<div id="task"></div>
		<div id="new_task"></div>

		<!--modal-->
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
							&times;
						</button>
						<h4 class="modal-title">해야 할 일 추가 하기</h4>
					</div>
					<div class="modal-body">
						<div id="memo_form">
							업무
							<input type="text" id="task_name">
							<br>
							마감일
							<input type="date" id="task_duedate">
							<br>
							참여자
							<input type="text" id="task_handler">
							<br>
							메모
							<input type="text" id="task_content">
							<br>
						</div>
					</div>
					<div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">
								닫기
							</button>
							<button type="button" id="save_btn" class="btn btn-primary" data-dismiss="modal">
								저장
							</button>
						</div>
					</div>
				</div><!--/.modal-content-->
			</div><!--/.modal-dialog-->
		</div><!--/.modal-->

		<!-- chat -->
<div>
		<div id="txtarea">
			<dl id="txtappend">
				<li id=messages >
			</dl>
		</div>
<form id="send" action="">
            <input id="m"  autocomplete="off" />
            <input id="sendbtn" type="submit" value="Send" />
         </form>
</div>
